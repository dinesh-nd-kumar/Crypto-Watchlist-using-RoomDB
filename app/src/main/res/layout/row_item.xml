<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="4dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Icon for BTC/USDT (the red logo on the left) -->
    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="12dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- BTC / USDT Text -->
    <TextView
        android:id="@+id/pairTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC / USDT"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/iconImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/volumeTextView"
        app:layout_constraintHorizontal_bias="0"
        android:paddingStart="8dp" />

    <!-- Volume Text (Vol 20.0M) -->
    <TextView
        android:id="@+id/volumeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vol 20.0 M"
        android:textSize="12sp"
        android:textColor="#808080"
        app:layout_constraintStart_toStartOf="@id/pairTextView"
        app:layout_constraintTop_toBottomOf="@id/pairTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <!-- Price Text (51244564.27) -->
    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="51244564.27"
        android:layout_marginEnd="12dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/percentageTextView"
        app:layout_constraintHorizontal_bias="0"
        android:paddingEnd="8dp" />

    <!-- Percentage Change (+6.09%) -->
    <TextView
        android:id="@+id/percentageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_green_rounded"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="+6.09%"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/priceTextView"
        app:layout_constraintTop_toBottomOf="@id/priceTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
